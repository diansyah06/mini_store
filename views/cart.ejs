<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Keranjang Belanja</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>

  <div class="container mt-5">
    <h2>Keranjang Belanja</h2>

    <div class="table-responsive mt-4">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">Gambar</th>
            <th scope="col">Harga</th>
            <th scope="col">Jumlah</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>

          <% cart.forEach(el=> { %>
          <tr>
            <td>
              <input type="hidden" value="<%= el.id %>" name="qty" id="qty">
              <input type="hidden" value="<%= el.total %>" id="cost">
              <input type="hidden" value="<%= el.qty %>" id="kuantiti">
              <img style="width: 50px;" src="<%= el.url %>" alt="<%= el.pictures %>">
            </td>
            <td>
              <%= el.total %>
            </td>
            <td>
              <%= el.qty %>
            </td>
            <td class="has-text-centered">
              <input onclick="ubah()" type="number" value="<%= el.qty %>" min=1 max=10 name="number" step=1 id="number">
                <button onclick=<%='del(' +el.id+')' %> class="buttonis-danger is-small" style="margin-left: 5px;">Delete</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="row mt-4">
      <div class="col-md-6">
        <a href="/api/product" class="btn btn-secondary">Kembali Belanja</a>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
      let del = (id) => {
        axios.delete('/api/cart/' + id).then((result) => {
          alert('Hapus produk berhasil')
          location.reload();
        }).catch((err) => {
          alert('error ' + err)
        });
      }

      function ubah() {
        const numberInput = document.getElementById('number').value;

        const cost = document.getElementById('cost').value;
        const kuantiti = document.getElementById('kuantiti').value;
        const nilai = cost/kuantiti

        axios.put('/api/cart/' + document.getElementById('qty').value, {
            qty: numberInput,
            total:nilai * numberInput
          })
          .then((result) => {
            console.log(result.data.msg);
            window.location.reload();
            // Lakukan tindakan lain jika diperlukan
          })
          .catch((error) => {
            console.error(error);
            // Tangani kesalahan jika diperlukan
          });
      }
    </script>
</body>

</html>