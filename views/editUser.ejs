<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit User</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
  <%- include('./layout/header.ejs') %>
  <div class="container mt-5">
    <h2>Edit User</h2>
    <form id="editUserForm" enctype="multipart/form-data">
      <div class="mb-3">
        <input type="hidden" value="<%= user.id %>" id="userId">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
      </div>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>" required>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" value="<%= user.password%>" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= user.email%>" required>
      </div>
      <div class="mb-3">
        <label for="avatar" class="form-label">Avatar</label>
        <input type="file" class="form-control" id="avatar" name="avatar">
      </div>
      <button type="submit" class="btn btn-primary">Update User</button>
    </form>
  </div>
  <%- include('./layout/footer.ejs') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-eaQ6q0TBqU8MfFPg6K7Lci6gG2ZQ21fmd+VfL5e5yPm8LwF2p1sN2tU6paBQa/9I" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script>
    document.getElementById('editUserForm').addEventListener('submit', async function(event) {
      event.preventDefault();

      const formData = new FormData(this);
      const userId = document.getElementById('userId').value;

      try {
        const response = await axios.put(`/edit/user/${userId}`, formData);

        if (response.status === 200) {
          alert("Update akun berhasil, silahkan login kembali")
          console.log('User updated successfully:', response.data);
          window.location = '/';
        } else {
          console.error('Error updating user:', response.data);
        }
      } catch (error) {
        console.error('Error:', error.message);
      }
    });
  </script>
</body>

</html>